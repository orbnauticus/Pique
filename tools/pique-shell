from pique.client import Client
import sys

import optparse

parser = optparse.OptionParser()
parser.add_option('-H', '--host', dest='host', default='localhost',
  help='IP address of the server')

options, args = parser.parse_args()
#print options, args
import readline
import shlex

def shell(self, prompt, history_file=None):
	prompt = prompt if sys.stdin.isatty() else ''
	if history_file:
		try:
			readline.read_history_file(history_file)
		except IOError:
			pass
	try:
		while True:
			try:
				line = raw_input(self.prompt)
			except (EOFError, KeyboardInterrupt):
				break
			yield shlex.split(line, True)
	finally:
		if history_file:
			readline.write_history_file(history_file)
		if sys.stdin.isatty():
			print

def printformat(obj):
	if obj is None:
		return
	elif isinstance(obj, (list,tuple,set)):
		print '\n'.join(map(repr,obj))
	elif isinstance(obj, basestring):
		print obj
	elif isinstance(obj, Exception):
		print '----- Remote Exception -----'
		print obj.args[0],	
		print '----------------------------'
	else:
		print repr(obj)

print 'Connecting to host', options.host
serv = Client()
serv.connect(options.host)

prompt = '(pique)%s: ' % options.host
history = os.expanduser('~/.config/pique/shell_history')
source = (args,) if args else shell(prompt, history_file=history)

for argv in source:
	if argv:
		print 'Calling', ' '.join(argv)
		try:
			handle, result = serv.call_quick(*argv)
		except EOFError:
			break
		else:
			printformat(result)

print 'Disconnecting'
